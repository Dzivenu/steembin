<div class="Themes">
  <div class="jumbotron text-center">
    <h1>{{appName}} - Themes</h1>
    <p class="lead">
      Pick a theme to use as your default. Posters can pick their themes by
      setting the <code>meta.theme</code> parameter.
    </p>
  </div>

  <div class="container">
    <h2>Latest Posts Made with {{appName}}</h2>

    <div class="list-group media-list">
      {{#each themes}}
        <div class="list-group-item">
          <div class="media">
            <div class="media-left">
              <a href="{{url}}">
              <img style="max-width: 200px" class="media-object" src="{{image_url}}" alt="{{name}}" />
              </a>
            </div>

            <div class="media-body media-middle">
              <h4 class="media-heading">
              <a href="{{url}}">
                {{name}}
              </a>
              </h4>

              By <a href="{{author_url}}">{{author}}</a>
            </div>

            <div class="media-right">
              <form action="/themes" method="post">
                {{#if is_current}}
                  <input type="hidden" name="theme_name" value="" />
                  <button type="submit" class="btn btn-danger">
                    Currently selected theme (Click to unset)
                  </button>
                {{else}}
                  <input type="hidden" name="theme_name" value="{{name}}" />
                  <button type="submit" class="btn btn-default">
                    Select this theme
                  </button>
                {{/if}}
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
